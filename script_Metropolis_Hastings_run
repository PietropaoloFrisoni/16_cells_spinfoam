#!/bin/bash

export LD_LIBRARY_PATH="./lib":$LD_LIBRARY_PATH

#export OMP_NUM_THREADS=6

DSPIN=3

LENGTH=100

SIGMA=0.4

BURNIN=10

VERBOSITY=0

