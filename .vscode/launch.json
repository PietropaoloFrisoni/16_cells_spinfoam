    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Deb per prove",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/prove/a.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Abilita la riformattazione per gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Imposta Versione Disassembly su Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Deb per full project",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/test_sampler",
            "args": [
                "${workspaceFolder}/data_folder",
                "${workspaceFolder}/parallel_hashmap"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Abilita la riformattazione per gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                },
                {
                    "description": "Imposta Versione Disassembly su Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": false
                },
                {
                    "text": "set env LD_LIBRARY_PATH=${workspaceFolder}/lib",
                    "ignoreFailures": false
                }
            ]
        }
    ]
}